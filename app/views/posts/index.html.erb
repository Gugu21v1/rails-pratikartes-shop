<section class="blog margin-top margin-bottom">
  <div>
    <% valor = 0 %>
    <% @posts.each do |post| %>
      <div class="post">
        <%= cl_image_tag post.img_url.key, height: 300, width: 400, crop: :fill, alt: "post-#{valor}" %>
        <h4><%= post.title %></h4>
        <p><%= post.body.split(/\\n/).join("<br />").html_safe %></p>
        <%= link_to "Continuar Lendo", post_path(post), class: "continuar" %>
      </div>
      <% valor += 1 %>
    <% end %>
  </div>
</section>
<script>
  document.querySelectorAll(".navbar-collapse.collapse.clearfix .navigation.clearfix>li").forEach((element) => {
    if(element.innerText.toUpperCase() === "BLOG") {
      element.classList.add("current")
    } else {
      element.classList.remove("current")
    }
  });
</script>
